# SynApps Environment Configuration Example
# Copy this file to .env and fill in your values

# ====================
# Backend Configuration
# ====================

# Database
DATABASE_URL=sqlite:///./synapps.db
# For PostgreSQL, use:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/synapps
POSTGRES_USER=synapps
POSTGRES_PASSWORD=synapps
POSTGRES_DB=synapps
POSTGRES_PORT=5432

# Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS: comma-separated allowed origins (required in production)
BACKEND_CORS_ORIGINS=http://localhost:3000

# Rate Limiting (per sliding window)
# RATE_LIMIT_WINDOW_SECONDS=60
# RATE_LIMIT_FREE=60
# RATE_LIMIT_PRO=200
# RATE_LIMIT_ENTERPRISE=1000
# RATE_LIMIT_ANONYMOUS=30

# API Keys
# Required for Writer Applet
OPENAI_API_KEY=your_openai_api_key_here

# Required for Artist Applet
STABILITY_API_KEY=your_stability_api_key_here
DALLE_API_KEY=your_dalle_api_key_here

# ====================
# Frontend Configuration
# ====================

# API URL for frontend to connect to backend
REACT_APP_API_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000

# WebSocket URL for real-time updates
REACT_APP_WEBSOCKET_URL=ws://localhost:8000/ws
VITE_WEBSOCKET_URL=ws://localhost:8000/ws

# Feature flags
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false

# ====================
# Development Settings
# ====================

# Debug mode (set to true for development)
DEBUG=true

# Log level (debug, info, warning, error, critical)
LOG_LEVEL=info

# ====================
# Production Settings
# ====================

# Set to true in production
PRODUCTION=false

# Secret key for session management
SECRET_KEY=change_this_to_a_secure_random_string

# ====================
# Docker Settings
# ====================

# Docker image tags
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest
